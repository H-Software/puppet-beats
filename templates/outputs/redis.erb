  redis:
    enabled: true
    host: <%= @host %>
    port: <%= @port %>
    save_topology: <%= @save_topology %>

<% if @index %>
    # Custom index
    index: <%= @index %>
<% end %>
<% if @db %>
    db: <%= @db %>
<% end %>
<% if @db_topology %>
    db_topology: <%= @db_topology %>
<% end %>
<% if @password %>
    password: <%= @password %>
<% end %>
<% if @timeout %>
    timeout: <%= @timeout %>
<% end %>
<% if @reconnect_interval %>
    # Custom HTTP path to ES
    reconnect_interval: <%= @reconnect_interval %>
<% end %>
